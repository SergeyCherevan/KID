<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Цвета -->
    <Color x:Key="WindowBackground">#1F1F1F</Color>
    <Color x:Key="MenuBackground">#1F1F1F</Color>
    <Color x:Key="SplitterColor">#1F1F1F</Color>
    <Color x:Key="EditorBackground">#505050</Color>
    <Color x:Key="EditorForeground">White</Color>
    <Color x:Key="SpecialElementsBackground">#424242</Color>
    <Color x:Key="TextColor">White</Color>
    <Color x:Key="ConsoleBackground">Black</Color>
    <Color x:Key="ConsoleForeground">White</Color>
    <Color x:Key="CanvasBackground">#D3D3D3</Color>
    <Color x:Key="WindowBorder">#606060</Color>

    <!-- Цвета вкладок редактора -->
    <Color x:Key="TabActiveBackground">#7160E8</Color>
    <Color x:Key="TabInactiveBackground">#2E2E2E</Color>
    <Color x:Key="TabBarBackground">#1F1F1F</Color>

    <!-- Кисти -->
    <SolidColorBrush x:Key="WindowBrush" Color="{StaticResource WindowBackground}" />
    <SolidColorBrush x:Key="TitleBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="MenuBrush" Color="{StaticResource MenuBackground}" />
    <SolidColorBrush x:Key="SplitterBrush" Color="{StaticResource SplitterColor}" />
    <SolidColorBrush x:Key="SpecialElementsBrush" Color="{StaticResource SpecialElementsBackground}" />
    <SolidColorBrush x:Key="EditorBrush" Color="{StaticResource EditorBackground}" />
    <SolidColorBrush x:Key="EditorBackgroundBrush" Color="{StaticResource EditorBackground}" />
    <SolidColorBrush x:Key="EditorForegroundBrush" Color="{StaticResource EditorForeground}" />
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}" />
    <SolidColorBrush x:Key="ConsoleBrush" Color="{StaticResource ConsoleBackground}" />
    <SolidColorBrush x:Key="ConsoleTextBrush" Color="{StaticResource ConsoleForeground}" />
    <SolidColorBrush x:Key="CanvasBrush" Color="{StaticResource CanvasBackground}" />
    <SolidColorBrush x:Key="WindowBorderBrush" Color="{StaticResource WindowBorder}" />
    <SolidColorBrush x:Key="TabActiveBrush" Color="{StaticResource TabActiveBackground}" />
    <SolidColorBrush x:Key="TabInactiveBrush" Color="{StaticResource TabInactiveBackground}" />
    <SolidColorBrush x:Key="TabBarBackgroundBrush" Color="{StaticResource TabBarBackground}" />

    <!-- Стили элементов -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource WindowBrush}"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style TargetType="Menu">
        <Setter Property="Background" Value="{StaticResource MenuBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
    </Style>

    <Style TargetType="MenuItem">
        <Setter Property="Background" Value="{StaticResource MenuBrush}" />
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Style.Resources>
            <Style TargetType="Separator">
                <Setter Property="Background" Value="{StaticResource SplitterBrush}"/>
                <Setter Property="Height" Value="1"/>
                <Setter Property="Margin" Value="2,0,2,0"/>
            </Style>
        </Style.Resources>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontFamily" Value="Consolas"/>
        <Setter Property="FontSize" Value="14"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="Background" Value="{StaticResource EditorBrush}"/>
    </Style>

    <Style TargetType="GridSplitter">
        <Setter Property="Background" Value="{StaticResource SplitterBrush}" />
    </Style>

    <!-- Стиль кнопок управления -->
    <Style x:Key="WindowButtonStyle" TargetType="Button">
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource TextBrush}"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center"
                                  VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="#bee6fd"/>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Setter Property="Foreground" Value="#2b3f6c"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>

