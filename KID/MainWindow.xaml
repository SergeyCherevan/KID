<Window x:Class="KID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:avalonedit="http://icsharpcode.net/sharpdevelop/avalonedit"
        Title=".KID - C#/.NET IDE для детей" Height="600" Width="800"
        WindowStyle="None"
        AllowsTransparency="False" 
        ResizeMode="CanResize"
        Icon="Resources/KID.ico"
        Background="{StaticResource SpecialElementsBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0"
                Background="{StaticResource WindowBrush}"
                Height="32">
            <DockPanel LastChildFill="True" MouseDown="TitleBar_MouseDown">

                <Image Source="Resources/KID.ico"
                       Width="30" Height="30"
                       Margin="7.5,0,0,0"
                       VerticalAlignment="Center" />

                <!-- Кнопки справа -->
                <StackPanel Orientation="Horizontal"
                            DockPanel.Dock="Right"
                            VerticalAlignment="Center">
                    <Button Name="MinimizeButton" Style="{StaticResource WindowButtonStyle}" Click="Minimize_Click" Content="—"/>
                    <Button Name="MaximizeButton" Style="{StaticResource WindowButtonStyle}" Click="Maximize_Click" Content="☐"/>
                    <Button Name="CloseButton" Style="{StaticResource WindowButtonStyle}" Click="Close_Click" Content="╳"/>
                </StackPanel>

                <!-- Заголовок -->
                <TextBlock Text=".KID — C#/.NET IDE для детей"
                           DockPanel.Dock="Left"
                           Foreground="{StaticResource SpecialElementsBrush}"
                           VerticalAlignment="Center"
                           FontWeight="Bold"
                           FontSize="13"
                           Margin="7.5,0,0,0"/>
            </DockPanel>
        </Border>

        <!-- Меню -->
        <Grid Grid.Row="1" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Background="{StaticResource MenuBrush}">
                <Menu Margin="0,0,0,10">
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый" Click="NewFileMenuItem_Click" />
                        <MenuItem Header="Открыть" Click="OpenFileMenuItem_Click" />
                        <MenuItem Header="Сохранить" Click="SaveFileMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Правка">
                        <MenuItem Header="Отменить" Click="UndoMenuItem_Click" />
                        <MenuItem Header="Повторить" Click="RedoMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Вид">
                        <MenuItem Header="Тема" />
                    </MenuItem>
                    <MenuItem Header="▶️ Запустить" Click="RunButton_Click" />
                    <MenuItem Header="■ Стоп" Click="StopButton_Click" IsEnabled="False" />
                </Menu>
            </StackPanel>
        </Grid>

        <!-- Рабочая зона -->
        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="310" MinWidth="310" />
            </Grid.ColumnDefinitions>

            <!-- Код -->
            <avalonedit:TextEditor Grid.Column="0" Margin="5"
                       Name="CodeEditor"
                       FontFamily="Consolas"
                       FontSize="14"
                       ShowLineNumbers="True"
                       Background="{StaticResource EditorBrush}"
                       Foreground="{StaticResource TextBrush}" />

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource SplitterBrush}" />

            <!-- Вывод -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition MinHeight="300" />
                </Grid.RowDefinitions>

                <!-- Консоль -->
                <TextBox Grid.Row="0" Name="ConsoleOutput"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="13"
                         Background="{StaticResource ConsoleBrush}"
                         Foreground="{StaticResource ConsoleTextBrush}" />

                <!-- Вертикальный разделитель -->
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="{StaticResource SplitterBrush}" />

                <!-- Графика -->
                <Canvas Grid.Row="2" Name="GraphicsCanvas"
                        Height="Auto" Width="Auto"
                        Background="{StaticResource CanvasBrush}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
