<Window x:Class="KID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=".KID - IDE для детей" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Рабочая зона -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Menu>
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый" />
                        <MenuItem Header="Открыть" />
                        <MenuItem Header="Сохранить" />
                    </MenuItem>
                    <MenuItem Header="Правка">
                        <MenuItem Header="Отменить" />
                        <MenuItem Header="Повторить" />
                    </MenuItem>
                    <MenuItem Header="Вид">
                        <MenuItem Header="Тема" />
                    </MenuItem>
                </Menu>

                <Button Name="RunButton" Content="▶️ Запустить" Margin="10,0,0,0" Click="RunButton_Click"/>
                <Button Name="StopButton" Content="■ Стоп" Margin="5,0,0,0" Click="StopButton_Click" IsEnabled="False"/>
            </StackPanel>
        </Grid>

        <!-- Далее твоя рабочая зона без изменений -->
        <!-- Код слева -->
        <TextBox Grid.Row="1" Grid.Column="0" Margin="5"
             Name="CodeEditor"
             AcceptsReturn="True"
             VerticalScrollBarVisibility="Auto"
             HorizontalScrollBarVisibility="Auto"
             FontFamily="Consolas" FontSize="14"
             Text="Console.WriteLine(&quot;Hello World!&quot;);"/>

            <!-- Справа вывод -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Консоль -->
                    <RowDefinition Height="5"/>
                    <!-- Разделитель -->
                    <RowDefinition Height="2*" />
                    <!-- Графика -->
                </Grid.RowDefinitions>

                <!-- Консоль -->
                <TextBox Grid.Row="0" Name="ConsoleOutput"
         IsReadOnly="True"
         VerticalScrollBarVisibility="Auto"
         FontFamily="Consolas" FontSize="13"
         Background="Black" Foreground="White"
         Text="Console output..."/>

                <!-- Вертикальный разделитель -->
                <GridSplitter Grid.Row="1"
                  Height="5"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Center"
                  Background="Gray"/>

                <!-- Графика -->
                <Canvas Grid.Row="2" Name="GraphicsCanvas"
            Background="LightGray"
            MinWidth="400" MinHeight="400"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"/>
            </Grid>

        </Grid>
    </Grid>
</Window>
