<Window x:Class="KID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=".KID - C#/.NET IDE для детей" Height="600" Width="1000"
        Background="{StaticResource WindowBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Меню -->
        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal" Background="{StaticResource MenuBrush}">
                <Menu>
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый" Click="NewFileMenuItem_Click" />
                        <MenuItem Header="Открыть" Click="OpenFileMenuItem_Click" />
                        <MenuItem Header="Сохранить" Click="SaveFileMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Правка">
                        <MenuItem Header="Отменить" Click="UndoMenuItem_Click" />
                        <MenuItem Header="Повторить" Click="RedoMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Вид">
                        <MenuItem Header="Тема" />
                    </MenuItem>
                    <MenuItem Header="▶️ Запустить" Click="RunButton_Click" />
                    <MenuItem Header="■ Стоп" Click="StopButton_Click" IsEnabled="False" />
                </Menu>
            </StackPanel>
        </Grid>

        <!-- Рабочая зона -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="5" />
                <ColumnDefinition Width="410" MinWidth="410" />
            </Grid.ColumnDefinitions>

            <!-- Код -->
            <TextBox Grid.Column="0" Margin="5"
                     Name="CodeEditor"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     Background="{StaticResource EditorBrush}"
                     Foreground="{StaticResource TextBrush}"
                     FontFamily="Consolas" FontSize="14" />

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="{StaticResource SplitterBrush}" />

            <!-- Вывод -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="5" />
                    <RowDefinition MinHeight="400" />
                </Grid.RowDefinitions>

                <!-- Консоль -->
                <TextBox Grid.Row="0" Name="ConsoleOutput"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="13"
                         Background="{StaticResource ConsoleBrush}"
                         Foreground="{StaticResource ConsoleTextBrush}" />

                <!-- Вертикальный разделитель -->
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="{StaticResource SplitterBrush}" />

                <!-- Графика -->
                <Canvas Grid.Row="2" Name="GraphicsCanvas"
                        Height="Auto" Width="Auto"
                        Background="{StaticResource CanvasBrush}" />
            </Grid>
        </Grid>
    </Grid>
</Window>
