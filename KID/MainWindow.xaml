<Window x:Class="KID.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title=".KID - C#/.NET IDE для детей" Height="600" Width="1000">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Верхняя панель -->
            <RowDefinition Height="*"/>
            <!-- Рабочая зона -->
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Grid.ColumnSpan="2">
            <StackPanel Orientation="Horizontal">
                <Menu>
                    <MenuItem Header="Файл">
                        <MenuItem Header="Новый" Click="NewFileMenuItem_Click" />
                        <MenuItem Header="Открыть" Click="OpenFileMenuItem_Click" />
                        <MenuItem Header="Сохранить" Click="SaveFileMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Правка">
                        <MenuItem Header="Отменить" Click="UndoMenuItem_Click" />
                        <MenuItem Header="Повторить" Click="RedoMenuItem_Click" />
                    </MenuItem>
                    <MenuItem Header="Вид">
                        <MenuItem Header="Тема" />
                    </MenuItem>
                    <MenuItem Header="▶️ Запустить" Click="RunButton_Click" />
                    <MenuItem Header="■ Стоп" Click="StopButton_Click" IsEnabled="False" />
                </Menu>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <!-- Редактор кода -->
                <ColumnDefinition Width="5" />
                <!-- Разделитель -->
                <ColumnDefinition Width="410" MinWidth="410" />
                <!-- Вывод -->
            </Grid.ColumnDefinitions>

            <!-- Код слева -->
            <TextBox Grid.Column="0" Margin="5"
                     Name="CodeEditor"
                     AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto"
                     HorizontalScrollBarVisibility="Auto"
                     FontFamily="Consolas" FontSize="14" />

            <!-- Разделитель -->
            <GridSplitter Grid.Column="1" Width="5"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          Background="Gray"/>

            <!-- Справа вывод -->
            <Grid Grid.Column="2" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <!-- Консоль -->
                    <RowDefinition Height="5" />
                    <!-- Разделитель -->
                    <RowDefinition MinHeight="400" />
                    <!-- Графика -->
                </Grid.RowDefinitions>

                <!-- Консоль -->
                <TextBox Grid.Row="0" Name="ConsoleOutput"
                         IsReadOnly="True"
                         VerticalScrollBarVisibility="Auto"
                         FontFamily="Consolas" FontSize="13"
                         Background="Black" Foreground="White" />

                <!-- Вертикальный разделитель -->
                <GridSplitter Grid.Row="1"
                              Height="5"
                              HorizontalAlignment="Stretch"
                              VerticalAlignment="Center"
                              Background="Gray" />

                <!-- Графика -->
                <Canvas Grid.Row="2" Name="GraphicsCanvas"
                        Background="LightGray"
                        Height="Auto" Width="Auto" />
            </Grid>

        </Grid>
    </Grid>
</Window>
